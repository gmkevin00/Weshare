<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/banner_kristen2"/>

        <ImageButton
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:src="@drawable/ic_friend"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:onClick="toTest" />

    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="96dip"
            android:layout_height="62dip"
            android:id="@+id/imageButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dip"
            android:src="@drawable/ic_map2"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="96dip"
            android:layout_height="62dip"
            android:id="@+id/imageButton2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:src="@drawable/filmclick"
            android:layout_gravity="bottom"
            android:onClick="toFilm" />

        <ImageButton
            android:layout_width="96dip"
            android:layout_height="62dip"
            android:id="@+id/imageButton3"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imageButton4"
            android:src="@drawable/noteclick"
            android:onClick="totry" />

        <ImageButton
            android:layout_width="96dip"
            android:layout_height="62dip"
            android:id="@+id/imageButton4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:src="@drawable/userclick"
            android:layout_gravity="bottom"
            android:onClick="toTest" />


    </LinearLayout>



</RelativeLayout>